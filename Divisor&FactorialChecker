#include <stdio.h>

int main() {
    int choice,n;
  printf("Menu \n 1.Divisor Checker \n 2.Factorial Checker \n ");
  printf("enter either option 1 or 2, enter here : \t");
  scanf("%d",&choice);
  if(choice==1)
  {
  printf("Enter the number to find its Divisor: \t");
  scanf(“%d”,&n);
    for(int i=1;i<=n; i++)
     {
       if(n%i==0)
       printf("%i \t",i);
     }
   }    
 else if(choice==2)
 {
   
    printf("Enter the number to find its Factorial: \t");
    int k;
    scanf("%d",&k);
    int factorial=1;
     for(int j=1;j<=k; j++)
      {
    factorial*=j;
      }
   printf("%d \n ",factorial);
   }
  

    return 0;
}
